extends ../../layout/defaut.pug
include ../../mixins/show-alert.pug


block main 
    if(role.permission.includes("account_create"))          
    
        +alert-success(5000)
        +alert-error(5000)
        h1(class="mb-4") Thêm mới tài khoản

        form(
            action=`${prefixAdmin}/accounts/create`
            method="POSt"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="fullName") Họ tên *
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    required
                )
            div(class="form-group")
                label(for="email") Email *
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                )
            div(class="form-group")
                label(for="password") Mật khẩu *
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    required
                )
            div(class="form-group")
                label(for="phone") Số điện thoại
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                )
            div(class='form-group'
                upload-image
            )
                label(for="avatar") Avatar 
                input(
                    type="file"
                    class='form-control-file'
                    id='avatar'
                    name='avatar'
                    accept='image/*'
                    upload-image-input
                )
                img(src="" upload-image-preview
                    class='image-preview'
                )
            div(class="form-group")
                label(for="role_id") Phân quyền 
                select(name="role_id" id="role_id" class="form-control")
                    option(disabled) -- Chọn --
                    each item in roles
                        option(value=item.id) #{item.title} 
            div(class='form-group form-check form-check-inline')
                input(
                    type="radio"
                    class='form-check-input'
                    id='statusActive'
                    name='status'
                    value='active'
                    checked
                )
                label(for="statusaActive" class='form-check-lable') Hoạt Động 
            div(class='form-group form-check form-check-inline')
                input(
                    type="radio"
                    class='form-check-input'
                    id='statusActive'
                    name='status'
                    value='inactive'
                    checked
                )
                label(for="statusaActive" class='form-check-lable') Dừng Hoạt Động 
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Tạo mới
