extends ../../layout/defaut.pug

block main  
    
    if(role.permission.includes("roles_edit"))          

        h1(class="mb-4") Chỉnh sửa phân quyền

        form(
            action=`${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
            method="POSt"
        )
            div(class="form-group")
                label(for="title") Tiêu đề
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    required
                    value=data.title
                )
            div(class="form-group")
                label(for="desc") Mô tả
                input(
                    type="text"
                    class="form-control"
                    id="des"
                    name="description"
                    value=data.description
                )
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật
    
    script(src="/admin/js/roles.js")            
