mixin table-tree(items, level=1)
    each item ,index in items
        - const prefix= Array(level +1).join("--") 
        tr 
            td 
                input(
                    type="checkbox"
                    name="id"
                    value=item.id
                )
            td #{item.index}
            td 
                img(
                    src=item.thumbnail
                    alt=item.title
                    width='100px'
                    height='auto'
                )
            td #{prefix} #{item.title}
            td 
                input(
                    type="number"
                    value=item.position 
                    style='width :60px'
                    min='1'
                    name='position'    
                )
            td 
                if(role.permission.includes("products-category_edit"))
                    if(item.status=='active')
                        a(
                            href='javascript:;'
                            data-status=item.status 
                            data-id=item.id
                            button-change-status
                            class='badge badge-success'
                        ) Hoạt động
                    else 
                        a(
                            href='javascript:;'
                            data-status=item.status 
                            data-id=item.id
                            button-change-status 
                            class='badge badge-danger'
                        ) Dừng Hoạt động   
            td 
                p #{item.fullName}  
                if(item.createdBy.createdAt)    
                    p #{moment(item.createdBy.createdAt).format("DD/MM/YYYY")}  
            if(item.fullNameDelete)
                td 
                    p #{item.fullNameDelete}  
                    if(item.deletedBy.deletedAt)    
                        p #{moment(item.deletedBy.deletedAt).format("DD/MM/YYYY")}
            td 
                - const updatedBy =item.updatedBy.slice(-1)[0]
                if(updatedBy)
                    p #{updatedBy.fullName}  
                    if(updatedBy.updatedAt)    
                        p #{moment(updatedBy.updatedAt).format("DD/MM/YYYY")}
            td  
                a(
                    href=`${prefixAdmin}/products-category/detail/${item.id}`
                    class='btn btn-secondary btn-sm'
                ) Chi tiết
                if(role.permission.includes("products-category_edit"))
                    a(
                        href=`${prefixAdmin}/products-category/edit/${item.id}`
                        class='btn btn-warning btn-sm'
                    ) Sửa
                if(role.permission.includes("products-category_delete"))
                    button(
                        class='btn btn-danger btn-sm ml-1'
                        data-id=item.id
                        button-delete
                    ) Xóa
        if item.children && item.children.length >0
            +table-tree(item.children, level+1)