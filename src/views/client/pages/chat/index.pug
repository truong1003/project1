extends ../../layout/defaut.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head("Chat")
        
        .row 
            .col-12 
                .chat(my-id=user.id)
                    //- .inner-head
                    //-     .inner-avata
                    //-     .inner-name Em yêu
                    .inner-body
                        each chat in chats 
                            div(class=(chat.infoUser.id == user.id ? "inner-outgoing": "inner-incoming")) 
                                if(chat.infoUser.id != user.id)
                                    .inner-name #{chat.infoUser.fullName}
                                .inner-content
                                    | #{chat.content}
                        div(class="inner-list-typing")
                    .inner-foot 
                        form(
                            class="inner-form"
                            action=""
                        )           
                            input(
                                type="text"
                                placeholder="Nhập nội dung ...."
                                name="content"
                            )     
                            span(class="button-icon btn btn-light mx-2") 
                                i.fa-regular.fa-face-smile  
                            button 
                                i.fa-solid.fa-paper-plane     

    div(class="tooltip" role="tooltip")
        emoji-picker
