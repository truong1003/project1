                        //- .inner-incoming 
                        //-     .inner-name Truong 
                        //-     .inner-content
                        //-         | truong luu
                        //- .inner-outgoing
                        //-     .inner-content
                        //-         | 1234
                        //- .inner-incoming 
                        //-     .inner-name Truong 
                        //-     .inner-content
                        //-         | nho dang
                    .inner-foot 
                        form(
                            class="inner-form"
                            action=""
                        )           
                            input(
                                type="text"
                                placeholder="Nhập nội dung ...."
                                name="content"
                            )            
                            button 
                                i.fa-solid.fa-paper-plane     
