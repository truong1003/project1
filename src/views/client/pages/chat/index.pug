extends ../../layout/defaut.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head("Chat")
        
        .row 
            .col-12 
                .chat 
                    //- .inner-head
                    //-     .inner-avata
                    //-     .inner-name Em yêu
                    .inner-body
                        each chat in chats 
                            div(class=(chat.infoUser.id == user.id ? "inner-outgoing": "inner-incoming")) 
                                if(chat.infoUser.id != user.id)
                                    .inner-name #{chat.infoUser.fullName}
                                .inner-content
                                    | #{chat.content}
